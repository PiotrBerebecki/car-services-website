  <!--*********************************************
    $MAIN CONTENT
  **********************************************-->
  <main class="main-content">

    <section class="contact">

      <div class="contact-container offerte">

        <div class="contact-text">
          <div class="contact-info">
            <h2 class="contact-info-header">Offerte op maat!</h2>
            <p>Beschrijf hieronder uw wensen en wij zorgen dat u binnen 1 werkdag een zeer scherpe en vrijblijvend offerte ontvangt.</p>
          </div>
        </div>

        <form class="contact-form" method="post">
          <div class="contact-form-column-one">
            <input name="name" class="contact-form-input" type="text" placeholder="* Naam" required autocomplete="name">
            <input name="email" class="contact-form-input" type="text" placeholder="* Email" required autocomplete="email">
            <input name="phone" class="contact-form-input" type="text" placeholder="* Tel. nummer" required autocomplete="tel">
            <input name="date" class="contact-form-input" type="text" placeholder="* Gewenste datum">
          </div>
          <div class="contact-form-column-two">
            <textarea name="message" class="contact-form-input" placeholder="* Bericht"></textarea>
            <input type="submit" class="button-accent" value="Verzend">
          </div>
        </form>

        <div class="contact-text">
          <div class="phone-info">
            <header class="phone-info-header">Liever bellen?</header>
            <p>We zijn ieder werkdag bereikbaar van 08.00 tot 17.00 uur <br><span class="text-regular-strong">071- 2600 323</span></p>
          </div>
        </div>

      </div>

    </section><!-- END OF CONTACT -->


    <section class="suppliers">
      <div class="suppliers-container">
        <img class="logo-supplier" src="assets/images/shared/logos-suppliers/suntek.png" alt="logo suntek">
        <img class="logo-supplier" src="assets/images/shared/logos-suppliers/3m.png" alt="logo 3m">
        <img class="logo-supplier" src="assets/images/shared/logos-suppliers/hexis.png" alt="logo hexis">
        <img class="logo-supplier" src="assets/images/shared/logos-suppliers/avery-dennison.png" alt="logo avery dennison">
      </div>
    </section><!-- END OF SUPPLIERS -->

  </main><!-- END OF MAIN CONTENT -->

  {{>footer-normal}}